pipeline{
    agent {label 'slave_1'}
    tools { maven 'maven-test' }
    stages{
        stage ('checkout scm')
        {
            steps
            {
                checkout scm
            }

        }
        stage ('maven-build')
        {
            steps
            {
                sh 'mvn clean package'
            }
        }
        stage ('tomcat deploy')
        {
            steps {
                sshagent(['tomcat_deploy'])
            sh "scp -o StricKeyHostChecking=no target/maven-web-application.war ec2-user@65.2.124.122:/opt/webapps"         
            }
        }
        }
    }
